{
  "manifest_version": 3,
  "name": "SafeLink",
  "version": "1.0",
  "description": "Check short links safely before opening them",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://proxyium.com/*", "https://www.proxyium.com/*", "https://cdn.proxyium.com/*", "https://*.proxyium.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://proxyium.com/*", "https://www.proxyium.com/*"],
      "js": ["proxyium-inject.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["loading.html", "overlay.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
